# Choose provider: openai | yandex
LLM_PROVIDER=yandex

# -----------------------
# OpenAI-compatible (OpenAI/OpenRouter/etc)
# -----------------------
LLM_API_KEY=
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=nvidia/nemotron-nano-9b-v2:free
LLM_JSON_MODE=1
LLM_HTTP_REFERER=
LLM_APP_TITLE=arxiv-llm-system

# -----------------------
# YandexGPT (Yandex Cloud)
# -----------------------
YANDEX_API_KEY=
YANDEX_FOLDER_ID=
YANDEX_MODEL=yandexgpt/latest

# Common
LLM_TIMEOUT=45
LLM_MAX_TEXT_CHARS=50000

# Cache
CACHE_TTL_SECONDS=3600
CACHE_MAXSIZE=2048

# Logging
LOG_LEVEL=INFO
